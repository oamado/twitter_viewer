<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Twitter viewer</title>
</head>
<body>

<%= form_tag("/", method: "get") do %>
  <%= label_tag(:query, "Find tweets") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Find tweets") %>
<% end %>

<% @tweets.each do |tweet| %>
    <blockquote class="twitter-tweet">
      <p> <%= tweet[:text] %></p>
      <a href="<%= tweet[:uri] %>" data-datetime="<%= tweet[:date] %>"><%= local_time(tweet[:date]) %></a>
    </blockquote>
<% end %>

</body>
</html>